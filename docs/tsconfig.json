{
	"extends": "mauss/tsconfig.json",
	"compilerOptions": {
		// Project Options
		"lib": ["DOM", "ES2020", "WebWorker"],
		"sourceMap": true,

		// Module Resolution
		"baseUrl": "src",
		"paths": {
			"$components/*": ["components/*"],
			"$pages/*": ["pages/*"],
			"$styles/*": ["styles/*"],
			"$utils/*": ["utils/*"]
		},
		"typeRoots": ["src/typings"],
		"types": ["svelte"],

		// Advanced
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "src/node_modules/**/*"],
	"exclude": ["node_modules/*", "__sapper__/*", "static/*"]
}
